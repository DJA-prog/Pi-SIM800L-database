# SIM800L Configuration Example
# Copy this file to .env.server and update with your settings

# GPIO Pin Configuration
RX_PIN=13              # Pi GPIO pin connected to SIM800L TX
TX_PIN=12              # Pi GPIO pin connected to SIM800L RX
BAUDRATE=9600          # Serial communication baud rate

# SIM Configuration
SIM_PIN=9438           # Your SIM card PIN (4 digits)

# Test Configuration
TEST_PHONE_NUMBER=+1234567890  # Your phone number for SMS testing (include country code)

# Database Configuration
DB_FILE=sms_messages.db

# Battery Monitoring (optional)
BATTERY_CHECK_INTERVAL=300
LOW_BATTERY_THRESHOLD=3.3
BATTERY_WARNING_THRESHOLD=3.5
ENABLE_AUTO_SHUTDOWN=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=false

# OLED Display Configuration
ENABLE_OLED=true
OLED_I2C_ADDRESS=0x3c

# SMS Report Configuration
ENABLE_SMS_REPORTS=true
SMS_REPORT_RECIPIENT=+1234567890  # Phone number to receive status reports
SMS_REPORT_INTERVAL=604800        # Report interval in seconds (default: 604800 = 1 week)
SMS_REPORT_LAST_SENT=0            # Timestamp of last report (auto-managed)

# SMS Report Interval Examples:
# 3600 = 1 hour
# 21600 = 6 hours  
# 43200 = 12 hours
# 86400 = 1 day
# 604800 = 1 week (default)
# 1209600 = 2 weeks
# 2419200 = 4 weeks (1 month)