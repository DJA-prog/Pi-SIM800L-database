# SMS GUI Configuration
# These settings will be automatically loaded when the GUI starts

# API Host (localhost, IP address, or hostname)
SMS_GUI_HOST=localhost

# API Port (default is 5000)
SMS_GUI_PORT=5000

# Example configurations:
# For local development:
# SMS_GUI_HOST=localhost
# SMS_GUI_PORT=5000

# For Raspberry Pi on network:
# SMS_GUI_HOST=192.168.1.100
# SMS_GUI_PORT=5000

# For remote server:
# SMS_GUI_HOST=myserver.com
# SMS_GUI_PORT=8080
